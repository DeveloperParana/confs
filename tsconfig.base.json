{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@confs/auth/api-interfaces": ["libs/auth/api-interfaces/src/index.ts"],
      "@confs/auth/data-access": ["libs/auth/data-access/src/index.ts"],
      "@confs/event/feature-shell": ["libs/event/feature-shell/src/index.ts"],
      "@confs/shared-project-ui-project": [
        "libs/shared/project/ui-project/src/index.ts"
      ],
      "@confs/shared/api-interfaces": [
        "libs/shared/api-interfaces/src/index.ts"
      ],
      "@confs/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@confs/shared/ui-dialog": ["libs/shared/ui-dialog/src/index.ts"],
      "@confs/shared/ui-event": ["libs/shared/ui-event/src/index.ts"],
      "@confs/shared/util-format": ["libs/shared/util-format/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
